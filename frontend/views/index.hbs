{{#if userDefined}}
    <div class="frosted">
        <h1 class="display-3 text-center">AWS Questionnaire</h1>
        <div>
            <p class="lead">
                Test your knowledge of AWS. Our auto-generated questions will test your skills and prove
                your capability using the tool. All you need to do is specify the number of questions and 
                we will quiz you on topics you may struggle with.
            </p>
            <input type="number" class="form-control" placeholder="Number of Questions" aria-label="Number of Questions" aria-describedby="button-addon" id="questionCount" min="1">
            <br/>
            <div class="d-grid gap-2 col-2 mx-auto ">
                <button class="btn btn-success" type="button" id="button-addon" onclick="changePage()">Go</button>
            </div>
        </div>
    </div>
{{else}}
    <div class="frosted">
        <div>
            <input type="text" class="form-control" placeholder="Enter your full name" aria-label="Enter your name" aria-describedby="button-addon" id="user">
            <br/>
            <div class="d-grid gap-2 col-4 mx-auto ">
                <button class="btn btn-success" type="button" id="button-addon" onclick="addUser()">Set Name</button>
            </div>
        </div>
    </div>
{{/if}}
